<form action="./contacto" method="post" class="container">
    <div class="mb-3 row">
        <label for="" class="col-sm-2">Nombre:</label>
        <div class="col-sm-10">
            <input type="text" name="nombre" id="nombre">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="" class="col-sm-2">Apellido:</label>
        <div class="col-sm-10">
            <input type="text" name="apellido" id="apellido">
        </div>
    </div>

    <div class="mb-3 row">
        <label for="" class="col-sm-2">Email:</label>
        <div class="col-sm-10">
            <input type="email" name="email" id="email">
        </div>
    </div>
    <br>
    <button type="submit" class="button btn btn-primary" value="Suscribirme">Suscribirme</button>
    
    <div class="text-center">
        <h2 class="text-danger">
            {{validacion}}
        </h2>
        </div>
